<!DOCTYPE html>
<html>
<head>
  <title>Galleryart</title>
  <%= stylesheet_link_tag "style_gallery", :media=>'screen'%>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="container">
  <div id="header">
    <h1>GALLERY ART</h1>
  </div>
  <div id="navigation">
    <p><strong>Menu</strong></p>
    <ul>
      <li><%= link_to "Inicio",{:action=>"home", :controller=>"pages"}%></li>
      <li><%= link_to "Artistas", teachers_path %></li>
      <li><%= link_to "Obras", works_path %></li>
      <li><%= link_to "Disciplinas", disciplines_path %></li>
      <li><%= link_to "Contacto", {:action=>'contact',:controller=>'pages'} %></li>
    </ul>
  </div>
  <%= yield %>
  <br>
  <div id="footer">
    <p>Footer</p>
  </div>
</div>
</body>
</html>
